#include <stdio.h>

int stack[100];
int top = -1;
void push(int value) {
    if(top == SIZE - 1) {
        printf("Stack Overflow! Cannot push %d\n", value);
    } else {
        top++;
        stack[top] = value;
        printf("Pushed %d into the stack.\n", value);
    }
}
int main() {
    int n, value;
    printf("How many values do you want to push? ");
    scanf("%d", &n);
    for(int i = 0; i < n; i++) {
        printf("Enter value to push: ");
        scanf("%d", &value);
        push(value);
    }
    printf("Current Stack:\n");
    for(int i = top; i >= 0; i--) {
        printf("%d\n", stack[i]);
    }
    return 0;
}
